{
  "name": "playing-permissions",
  "version": "1.0.0",
  "description": "Flexible and powerful permissions module for playing applications.",
  "author": "Forafish",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "prepublish": "npm run compile",
    "publish": "git push origin --tags && git push origin",
    "release:patch": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish",
    "compile": "rimraf -rf lib/ && babel src/ -d lib/ --copy-files",
    "watch": "babel --watch src/ --source-maps inline -d lib/ --copy-files",
    "lint": "eslint-if-supported semistandard --fix",
    "mocha": "mocha --opts mocha.opts",
    "coverage": "istanbul cover node_modules/mocha/bin/_mocha -- --opts mocha.opts",
    "test": "npm run compile && npm run lint && npm run coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PlayingIO/playing-permissions.git"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "bluebird": "^3.5.0",
    "debug": "^2.6.6",
    "heapdump": "^0.3.9",
    "hjson": "^2.4.3",
    "lodash": "^4.17.4",
    "mixpanel": "^0.7.0",
    "mongodb-arbiter-discovery": "^0.1.2",
    "mongodb-datadog-stats": "^0.1.2",
    "nconf": "^0.8.4",
    "node-statsd": "^0.1.1",
    "ramda": "^0.24.1",
    "redis": "^2.7.1",
    "response-time": "^2.3.2",
    "shutdown": "^0.3.0",
    "winston": "^2.3.1",
    "winston-udp": "^0.0.7"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-root-import": "^5.1.0",
    "babel-preset-env": "^1.4.0",
    "eslint-if-supported": "^1.0.1",
    "eslint-plugin-promise": "^3.5.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-changed": "^3.0.0",
    "gulp-eslint": "^3.0.1",
    "gulp-nodemon": "^2.2.1",
    "gulp-sourcemaps": "^2.6.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.3.0",
    "rimraf": "^2.6.1"
  }
}
